{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@prisma/*": ["./src/prisma/*"],
      "@utils/*": ["./src/utils/*"],
      "@auth/*": ["./src/auth/*"],
      "@config/*": ["./src/config/*"],
      "@users/*": ["./src/users/*"],
      "@email/*": ["./src/email/*"],
      "@email-generator/email-generator": ["libs/email-generator/src"],
      "@email-generator/email-generator/*": ["libs/email-generator/src/*"],
    }
  }
}
