{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@shared-components/*": ["./../shared-components/src/components/*"],
      "@shared-hooks": ["./../shared-components/src/hooks/index.ts"],
      "@shared-types": ["./../shared-components/src/types/index.ts"],
      "@shared-utils": ["./../shared-components/src/utils/index.ts"],
      "@shared-utils/validation": ["./../shared-components/src/utils/validation/index.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./../shared-components"
 ],
  "exclude": [
    "node_modules"
  ]
}
